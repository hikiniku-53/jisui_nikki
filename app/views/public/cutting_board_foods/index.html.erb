<div class="row">

  <!--検索フォーム-->
  <div class="col-xl-3">

    <!--キーワード検索-->
    <div class="m-2">
      <%= form_with url: cutting_board_foods_path, method: :get, local: true do |f|%>
        <%= render "layouts/search", f: f, keyword: @keyword %>
      <% end %>
    </div>

    <!--ジャンル検索-->
    <div class="my-3 d-none d-xl-block">
      <%= render 'genre', food_genres: @food_genres %>
    </div>
  </div>

  <!--まな板-->
  <div class="col-xl-9">

    <!--まな板-->
    <div class="border border-dark">
      <%= render "cutting_board", cutting_board_foods: @cutting_board_foods %>
    </div>

    <!--食材一覧-->
    <%= render "foods", foods: @foods %>
  </div>
</div>