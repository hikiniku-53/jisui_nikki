<h2 class="text-center">登録情報更新</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table class="table-sm mx-auto">
    <tbody>
      <tr>
        <th>名前</th>
        <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          <% end %>
        </td>
      </tr>

      <tr>
        <th>ユーザー公開設定</th>
        <td>
          <div>
            <%= f.radio_button :is_published, :true %>
            <%= f.label :is_published, "公開" %>

            <%= f.radio_button :is_published, :false, checked: true %>
            <%= f.label :is_published, "非公開" %>
          </div>
        </td>
      </tr>

      <tr>
        <th>
          パスワード<br>
          (変更しない場合は空白)
        </th>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br>
            <em>※<%= @minimum_password_length %> 文字以上</em>
          <% end %>
        </td>
      </tr>

      <tr>
        <th>
          現在のパスワード(必須)
        </th>
        <td>
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </td>
      </tr>

      <tr>
        <td class="text-center" colspan="2">
          <%= f.submit "更新する", class: 'btn btn-success' %>
          <%= link_to "戻る", :back, class: 'btn btn-secondary ml-5' %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

<div class="mx-auto d-flex align-items-center my-5" style="width: 300px;, height: 35px;">
  アカウントを削除する→
  <%= button_to "退会する", registration_path(resource_name), data: { confirm: "アカウントを削除してよろしいですか?"}, method: :delete, class: 'btn btn-sm btn-danger' %>
</div>
