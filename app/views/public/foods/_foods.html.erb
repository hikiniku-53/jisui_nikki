<% foods.each do |food| %>
 <div class="card p-2 m-2 bg-food" style="width: 16rem;, height: 80rem;">
  <%= link_to food_path(food.id), class: 'text-decoration-none' do %>
   
      <%= image_tag food.get_image(246,184), class: 'card-img-top' %>
      <div class="card-body text-dark">
        <h6 class="card-title h-2rem">
          <b><%= food.name %></b>
        </h6>
        <p class="card-text">
          E: <%= food.energy %>kcal<br>
          P: <%= food.protein %>g
          F: <%= food.fat %>g
          C: <%= food.carb %>g
        </p>
      </div>
    
  <% end %>
  </div>
<% end %>