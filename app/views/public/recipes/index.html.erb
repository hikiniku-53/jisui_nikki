<div class="row">

  <div class="col-sm-3">
    <!--キーワード検索-->
    <div><%= render "search", recipe: @recipe %></div>
  </div>
  <!--レシピ一覧-->
  <div class="col-sm-6">
    <% @recipes.each do |recipe| %>
      <%= render 'recipe', recipe: recipe %>
      <div id="favorite_<%= recipe.id %>">
        <%= render "favorite", recipe: recipe %>
      </div>
    <% end %>
  </div>
</div>