<div class="container">
  <div class="row">

    <!--Greeting-->
    <div class="col-sm-4 bg-light">
      <div class="p-3 text-center">
        <h4>みんなの自炊日記へようこそ！</h4>

      </div>

      <div class="row"></div>
    </div>

    <!--ピックアップ食材-->
    <div class=" col-sm-4 bg-food d-flex justify-content-center flex-wrap">


          <h4 class="p-3">今が旬の食材</h4>
          <%= render '/public/foods/foods', foods: @foods %>


        <%= link_to "もっと食材を見る", foods_path, class: 'btn btn-primary px-3' %>

    </div>

    <!--recipe pick up-->
    <div class="col-sm-4 bg-recipe">
      <div class="p-3 text-center">

        <h4>人気のレシピ</h4>

        <% @recipes.each do |recipe| %>
          <%= render '/public/recipes/recipe', recipe: recipe %>
        <% end %>
        <%= link_to "もっとレシピを見る", recipes_path, class: 'btn btn-primary px-3' %>
      </div>

    </div>
  </div>
</div>