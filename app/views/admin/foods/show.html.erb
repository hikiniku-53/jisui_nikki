<div class="container">
  <h1>
    <%= @food.name %>
  </h1>
  <div class="row">
    <!--栄養素-->
    <div class="col-6">
      <%= image_tag @food.get_image(540,500) %>
    </div>


    <div class="col-6">
      <table class="table table-bordered border-primary">
        <tr>
          <th>エネルギー : kcal</th>
          <td><%= @food.energy %></td>
        </tr>

        <tr>
          <th>たんぱく質</th>
          <td><%= @food.protein %></td>
        </tr>

        <tr>
          <th>脂質</th>
          <td><%= @food.fat %></td>
        </tr>

        <tr>
          <th>炭水化物</th>
          <td><%= @food.carb %></td>
        </tr>

        <tr>
          <th>食塩相当量</th>
          <td><%= @food.salt_equivalent %></td>
        </tr>
      </table>
      <div>
          <%= link_to "更新", edit_admin_food_path(params[:id]), class: 'btn btn-success px-3' %>
      </div>
    </div>
  </div>



  <!--コメント一覧-->
  <div>
    <table>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td>
              <%= comment.comment_genre.name %>
            </td>

            <td>
              <%= comment.customer.name %>
            </td>

            <td>
              <%= comment.comment %>
            </td>

            <td>
              <%= link_to "削除", admin_comment_path(comment.id), method: :delete, class: 'btn btn-danger px-3' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
